<Window x:Class="DNDMapper.CreateMapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create map" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="NameInput" Grid.Row="0" Grid.Column="1" Margin="5" />

        <TextBlock Text="Size X:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="XInput" Grid.Row="1" Grid.Column="1" Margin="5" />

        <TextBlock Text="Size Y:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
        <TextBox x:Name="YInput" Grid.Row="2" Grid.Column="1" Margin="5" />

        <Button Content="OK" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Click="OnOkClick" />
    </Grid>
</Window>