<Window x:Class="DNDMapper.CreateRegionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create region" Height="200" Width="400">
    <StackPanel Margin="10">
        <Label Content="Region name:" />
        <TextBox Name="RegionNameInput" />

        <Label Content="Region owner:" />
        <TextBox Name="RegionOwnerInput" />

        <Label Content="Region color:" />
        <TextBox Name="RegionColorInput" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="OnOkClick" />
            <Button Content="Cancel" Width="75" Margin="5" Click="OnCancelClick" />
        </StackPanel>
    </StackPanel>
</Window>